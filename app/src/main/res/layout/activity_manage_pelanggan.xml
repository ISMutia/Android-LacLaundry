<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.pelanggan.ManagePelanggan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/txtManagePelanggan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Pelanggan"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etIDPelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Pelanggan"
            android:visibility="gone"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">
            <EditText
                android:id="@+id/etNamaPelanggan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="Nama Pelanggan"
                android:inputType="textCapSentences" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal">
            <EditText
                android:id="@+id/etNohp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="No HP"
                android:inputType="textCapSentences" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal">
            <EditText
                android:id="@+id/etAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="Alamat"
                android:inputType="textCapSentences" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btnTambahPelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah"/>

        <Button
            android:id="@+id/btnUpdatePelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubah"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnDeletePelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:visibility="gone"/>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>